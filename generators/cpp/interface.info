name "interface"
templates_dir "." ; a directory of all cpp templates
def {
	generator "cpp"
	result "declarations.hpp"
	template "declarations.hpp.jinja"
}
cpp {
	generator "cpp"
	result "realization.hpp"
	template "realization.hpp.jinja"
	local_includes "def"
	local_includes "hpp"
}
hpp {
	generator "cpp"
	result "realization.cpp"
	template "realization.cpp.jinja"
	local_includes "def"
}
