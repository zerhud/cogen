defaults {
	filegen cpp
	naming underscore
}
gen
{
	cpp_dec {
		input declarations.jinja
		output declarations.hpp
	}
	header {
		inc_part cpp_dec
		input header.jinja
		output modules.hpp
		filter {
			sel interface
			sel record
		}
	}
	definition {
		inc_part cpp_dec
		inc_part header
		input definitions.jinja
		output modules.cpp
	}
	pymod {
		filegen python
		input python/cpppy.cpp.jinja
		output %mod%_%vm%.%vi%.cpp
		output_ng interface
	}
	cmake {
		filegen cmake
		input plain.jinja
		output CMakeLists.txt
		project interface
		libraries {
			interface {
				part cpp_dec
				part header
				part definition
				part pymod
			}
		}
	}
}
