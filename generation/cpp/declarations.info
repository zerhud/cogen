target {
	cpp {
		naming unserscore
	}
}
gen
{
	dec {
		parser interface
		target cpp
		input declarations.jinja
		output declarations.hpp
	}
	header {
		parser interface
		target cpp
		inc_part dec
		input header.jinja
		output module.hpp
		filter {
			sel interface
		}
	}
	definition {
		parser interface
		target cpp
		inc_part dec
		inc_part header
		input definitions.jinja
		output module.cpp
	}
	cmake {
		parser meta
		target cmake
		input plain.jinja
		output CMakeLists.txt
		project interface
		libraries {
			interface {
				part dec
				part header
				part definition
			}
		}
	}
}
