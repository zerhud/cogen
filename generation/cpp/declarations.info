defaults {
	parser interface
	target cpp
	naming underscore
}
gen
{
	dec {
		input declarations.jinja
		output declarations.hpp
	}
	header {
		inc_part dec
		input header.jinja
		output module.hpp
		filter {
			sel interface
			sel record
		}
	}
	definition {
		inc_part dec
		inc_part header
		input definitions.jinja
		output module.cpp
		forwards {
			ex {
				gen_str {
					name gen_str
					script "def gen_str(a,b):\n\tprint(\"hello\")\n\treturn \"hello \"+a"
				}
				gen_mod {
					name gen_mod
					file "/tmp/mod.py"
				}
			}
		}
	}
	cmake {
		parser meta
		target cmake
		input plain.jinja
		output CMakeLists.txt
		project interface
		libraries {
			interface {
				part dec
				part header
				part definition
			}
		}
	}
}
